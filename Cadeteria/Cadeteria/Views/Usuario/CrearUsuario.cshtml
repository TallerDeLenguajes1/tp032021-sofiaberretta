@using Cadeteria.Models.ViewModels.Usuario

@{
    ViewData["Title"] = "Crear Cuenta";
}

@model UsuarioAltaViewModel

<h1>Crear Cuenta</h1>
<hr />

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-4">
            <div class="login-form bg-light border border-secondary rounded mt-4 p-4">
                <form class="row g-3" asp-action="guardarUsuario" asp-controller="Usuario" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-12">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Password" class="control-label mt-3"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="ConfirmPassword" class="control-label mt-3"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="col-12 mt-3">
                        <input type="submit" value="Crear Cuenta" class="btn btn-dark float-end" />
                    </div>
                </form>
                <hr class="mt-4">
                <div class="col-12">
                    <p class="text-center mb-0">Ya tiene una cuenta? <a asp-action="Index">Iniciar Sesión</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
